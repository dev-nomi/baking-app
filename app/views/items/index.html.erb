<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Name</th>
      <th>Description</th>
      <th>Color</th>
      <th>Inventory level</th>
      <th>Reorder level</th>
      <th>Weight</th>
      <th>Is featured</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.category %></td>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.color %></td>
        <td><%= item.inventory_level %></td>
        <td><%= item.reorder_level %></td>
        <td><%= item.weight %></td>
        <td><%= item.is_featured %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

